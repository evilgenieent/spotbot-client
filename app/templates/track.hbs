<li class="media">
  <div class="album-cover pull-left">
    <img class="media-object" style="max-width: 100px;" {{bind-attr src=track.imageUrl}}>
    {{#if view.canEnqueue}}
      <i class="enqueue fa fa-plus" {{action 'enqueue'}}></i>
    {{/if}}
  </div>
  <div class="media-body">
    <h4 class="media-heading">{{track.title}} <small>{{track.formattedDuration}}</small></h4>
    <p>
      <strong>{{track.artistNames}}</strong><br/>
      {{track.albumTitle}}<br/>
    </p>
  </div>
</li>
