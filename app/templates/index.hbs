<div class="row">
  <div class="col-xs-12 col-sm-6">
    <h3>Queue</h3>
    <ol class="media-list">
      {{#each track in queue itemController='track'}}
        {{view 'track'}}
      {{else}}
        <em>The queue is empty</em>
      {{/each}}
    </ol>
  </div>
  <div class="col-xs-12 col-sm-6">
    <h3>Playlist/Album <small>{{playlist.name}}</small></h3>
    <ol class="media-list">
      {{#each track in playlist.tracks itemController='track'}}
        {{view 'track'}}
      {{/each}}
    </ol>
  </div>
</div>
