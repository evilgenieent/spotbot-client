<div layout="row" layout-sm="column" layout-margin>
  <section flex class="md-whiteframe-z1" layout="column">
    {{#md-toolbar class="md-accent"}}
      <div class="md-toolbar-tools">
        <h3>
          <md-icon>{{material-design-icon name='queue-music'}}</md-icon>
          Queue
        </h3>
      </div>
    {{/md-toolbar}}

    {{#md-list}}
      {{#each queue as |queuedTrack|}}
        {{#spotify-track data=queuedTrack.spotifyData queueable=false as |track|}}
          {{track-list-item track=track queueable=false}}
        {{/spotify-track}}
      {{/each}}
    {{/md-list}}
  </section>

  <section flex class="md-whiteframe-z1" layout="column">
    {{#md-toolbar class="md-accent"}}
      <div class="md-toolbar-tools">
        <h3>
          <md-icon>{{material-design-icon name='album'}}</md-icon>
          Playlist
        </h3>

        {{#if changePlaylist}}
          {{#md-input-container flex="" value=newPlaylistUri}}
            <label>Playlist URI</label>
            {{md-input }}
          {{/md-input-container}}
        {{else}}
          <h4>{{playlistName}}</h4>
          <span flex></span>
        {{/if}}

        {{#md-button class="md-icon-button" action="changePlaylist"}}
          <md-icon>{{material-design-icon name='playlist-add'}}</md-icon>
        {{/md-button}}
      </div>
    {{/md-toolbar}}

    {{spotify-playlist tracks=playlistTracks tracksData=playlistTracksData name=playlistName uri=playlistUri store=store}}
  </section>
</div>
